   FUNCTION Recherche (
      T: T_Personnel;
         Pr,Nm: T_Mot:=(OTHERS => ' ')) Returne Integer IS

      Entier: Integer:= -1;

   BEGIN
      FOR I IN T'RANGE LOOP
         IF T(I).Present AND T(I).Nom= Nm AND T(I).Prenom:= PR THEN
            Entier := I;
            EXIT;
         END IF;
      END LOOP;
      RETURN(Entier);
      END Recherche;

